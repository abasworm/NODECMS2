// sidebar: style can be found in sidebar.less
section.sidebar
    // Sidebar user panel
    .user-panel
        .pull-left.image
            img.img-circle(src='' alt='User Image')
        .pull-left.info
            p #{_UserName}
            a(href='#')
                i.fa.fa-circle.text-success
                |  Online
   
    
    // sidebar menu: : style can be found in sidebar.less
    ul.sidebar-menu(data-widget='tree')
        li.header MAIN NAVIGATION
        li.treeview
            a(href='#')
                i.fa.fa-dashboard
                span Dashboard
                span.pull-right-container
                    i.fa.fa-angle-left.pull-right
            ul.treeview-menu
                li
                    a(href='../../index.html')
                        i.fa.fa-circle-o
                        |  Dashboard v1
                li
                    a(href='../../index2.html')
                        i.fa.fa-circle-o
                        |  Dashboard v2
        li
            a(href='https://adminlte.io/docs')
                i.fa.fa-book
                span Documentation

