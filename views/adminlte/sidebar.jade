// sidebar: style can be found in sidebar.less
section.sidebar
    // Sidebar user panel
    .user-panel
        .pull-left.image
            //img.img-circle(src='' alt='User Image')
            h3
                span.label.bg-blue
                    i.fa.fa-user
        .pull-left.info
            p #{_UserName}
            a(href='#')
                i.fa.fa-circle.text-success
                |  Online
   
    
    // sidebar menu: : style can be found in sidebar.less
    ul.sidebar-menu(data-widget='tree')
        li.header MAIN NAVIGATION #{_UserGroup}
        li
            a(href='/dashboard')
                i.fa.fa-dashboard
                span Dashboard
        - if ([1].includes(_UserGroup))
            li
                a(href='/users')
                    i.fa.fa-users(aria-hidden='true')
                    span User Management
        - if ([1,2,4].includes(_UserGroup))
            li
                a(href='/ms_aproval')
                    i.fa.fa-check(aria-hidden='true')
                    span Approval
        - if ([1,3].includes(_UserGroup))
            li.treeview
                a(href='#')
                    i.fa.fa-book
                    span Service
                    span.pull-right-container
                        i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li
                        a(href='/ms_service/add')
                            i.fa.fa-circle-o
                            |  Add Service
                    li
                        a(href='/ms_service')
                            i.fa.fa-circle-o
                            |  Finish Service
        - if ([1,6,5].includes(_UserGroup))
            li
                a(href='/ms_reports')
                    i.fa.fa-file-pdf-o(aria-hidden='true')
                    span Reports
// /.sidebar