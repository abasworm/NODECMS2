// sidebar: style can be found in sidebar.less
section.sidebar
    // Sidebar user panel
    .user-panel
        .pull-left.image
            img.img-circle(src='' alt='User Image')
        .pull-left.info
            p #{_UserName}
            a(href='#')
                i.fa.fa-circle.text-success
                |  Online
   
    
    // sidebar menu: : style can be found in sidebar.less
    ul.sidebar-menu(data-widget='tree')
        li.header MAIN NAVIGATION
        li
            a(href='/dashboard')
                i.fa.fa-dashboard
                span Dashboard
                
        li.treeview
            a(href='#')
                i.fa.fa-book
                span Service
                span.pull-right-container
                    i.fa.fa-angle-left.pull-right
            ul.treeview-menu
                li
                    a(href='/ms_service/add')
                        i.fa.fa-circle-o
                        |  Add Service
                li
                    a(href='/ms_service')
                        i.fa.fa-circle-o
                        |  Close Ticket
